<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColor">#000000</item>
        <item name="android:datePickerDialogTheme">@style/datePickerTheme</item>
        <item name="android:timePickerDialogTheme">@style/timePickerTheme</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="datePickerTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">#007ef9</item>
        <item name="colorControlActivated">#007ef9</item>
        <item name="colorControlHighlight">#007ef9</item>
    </style>

    <style name="timePickerTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">#007ef9</item>        
        <item name="colorControlHighlight">#007ef9</item>
    </style>
</resources>
